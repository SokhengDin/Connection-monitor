{
    "name": "connection-monitor",
    "version": "1.0.0",
    "description": "Real-time connection monitoring system with pub/sub",
    "main": "dist/server/index.js",
    "scripts": {
        "start:server": "ts-node src/server/publisher.ts",
        "start:client": "electron .",
        "dev:server": "nodemon src/server/publisher.ts",
        "dev:client": "tsc && electron .",
        "test:client": "ts-node src/test-client.ts",
        "test:telegram": "ts-node src/test-telegram.ts",
        "build": "tsc",
        "watch": "tsc -w",
        "package": "electron-builder"
    },
    "dependencies": {
        "dotenv": "^16.4.1",
        "electron": "^33.2.0",
        "express": "^4.18.2",
        "ioredis": "^5.3.2",
        "socket.io": "^4.7.4",
        "socket.io-client": "^4.8.1",
        "telegraf": "^4.16.3",
        "uuid": "^11.0.3",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.11.16",
        "nodemon": "^3.0.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    },
    "build": {
        "appId": "com.connectionmonitor.app",
        "productName": "Connection Monitor",
        "directories": {
            "output": "dist"
        },
        "files": [
            "dist/**/*",
            "package.json"
        ],
        "win": {
            "target": "nsis"
        },
        "mac": {
            "target": "dmg"
        },
        "linux": {
            "target": "AppImage"
        }
    }
}
