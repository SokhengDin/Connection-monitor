{
    "name": "connection-monitor",
    "version": "1.0.0",
    "description": "Real-time connection monitoring system with pub/sub",
    "main": "dist/server/publisher.js",
    "scripts": {
        "build": "tsc",
        "start:server": "node dist/server/publisher.js",
        "dev:server": "nodemon src/server/publisher.ts",
        "start:client": "node dist/client/main/main.js",
        "dev:client": "nodemon src/client/main/main.ts",
        "test:client": "ts-node src/test-client.ts",
        "clean": "rimraf dist",
        "prebuild": "npm run clean",
        "build:server": "tsc -p tsconfig.server.json",
        "build:client": "tsc -p tsconfig.client.json"
    },
    "dependencies": {
        "@types/cors": "^2.8.17",
        "@types/helmet": "^0.0.48",
        "cors": "^2.8.5",
        "dotenv": "^16.4.1",
        "electron": "^33.2.0",
        "express": "^4.18.2",
        "helmet": "^8.0.0",
        "ioredis": "^5.3.2",
        "socket.io": "^4.7.4",
        "socket.io-client": "^4.8.1",
        "telegraf": "^4.16.3",
        "uuid": "^11.0.3",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.11.16",
        "nodemon": "^3.0.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    },
    "build": {
        "appId": "com.connectionmonitor.app",
        "productName": "Connection Monitor",
        "directories": {
            "output": "dist"
        },
        "files": [
            "dist/**/*",
            "package.json"
        ],
        "win": {
            "target": "nsis"
        },
        "mac": {
            "target": "dmg"
        },
        "linux": {
            "target": "AppImage"
        }
    }
}
