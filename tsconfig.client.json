{
    "compilerOptions": {
        "target": "ES2018",
        "module": "CommonJS",
        "lib": ["ES2018", "DOM"],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/client/**/*",
        "src/types/**/*",
        "src/utils/**/*",
        "src/constants/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/server"
    ]
}